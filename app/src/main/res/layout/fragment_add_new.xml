<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingBottom="56dp"
    tools:context=".AddNewFragment">

    <TextView
        android:id="@+id/add_new_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="start"
        android:text="@string/add_new_vocabulary"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:transitionName="add_new_vocab_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ScrollView
        android:id="@+id/add_new_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:scrollbarSize="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_new_tv"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_new_vocabulary_tf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:hint="@string/Vocabulary"
                android:textColorHint="@color/textColorHint"
                app:boxBackgroundColor="@color/colorEditText"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/hintTextAndStrokeColor"
                app:hintTextColor="@color/hintTextAndStrokeColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_new_vocabulary_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_new_definition_tf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:hint="@string/Definition"
                android:textColorHint="@color/textColorHint"
                app:boxBackgroundColor="@color/colorEditText"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/hintTextAndStrokeColor"
                app:hintTextColor="@color/hintTextAndStrokeColor"
                app:layout_constraintEnd_toEndOf="@+id/add_new_vocabulary_tf"
                app:layout_constraintStart_toStartOf="@+id/add_new_vocabulary_tf"
                app:layout_constraintTop_toBottomOf="@+id/add_new_vocabulary_tf">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_new_definition_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_new_collocations_tf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:hint="@string/Collocations"
                android:textColorHint="@color/textColorHint"
                app:boxBackgroundColor="@color/colorEditText"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/hintTextAndStrokeColor"
                app:hintTextColor="@color/hintTextAndStrokeColor"
                app:layout_constraintEnd_toEndOf="@id/add_new_definition_tf"
                app:layout_constraintStart_toStartOf="@id/add_new_definition_tf"
                app:layout_constraintTop_toBottomOf="@id/add_new_definition_tf">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_new_collocations_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_new_vocabulary_translation_tf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:hint="@string/Translated_vocabulary"
                android:textColorHint="@color/textColorHint"
                app:boxBackgroundColor="@color/colorEditText"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/hintTextAndStrokeColor"
                app:hintTextColor="@color/hintTextAndStrokeColor"
                app:layout_constraintEnd_toEndOf="@+id/add_new_collocations_tf"
                app:layout_constraintStart_toStartOf="@+id/add_new_collocations_tf"
                app:layout_constraintTop_toBottomOf="@id/add_new_collocations_tf">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_new_vocabulary_translation_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_new_collocations_translation_tf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:hint="@string/Translated_collocations"
                android:textColorHint="@color/textColorHint"
                app:boxBackgroundColor="@color/colorEditText"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/hintTextAndStrokeColor"
                app:hintTextColor="@color/hintTextAndStrokeColor"
                app:layout_constraintEnd_toEndOf="@id/add_new_vocabulary_translation_tf"
                app:layout_constraintStart_toStartOf="@id/add_new_vocabulary_translation_tf"
                app:layout_constraintTop_toBottomOf="@id/add_new_vocabulary_translation_tf">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_new_collocations_translation_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_new_gram_cat_tf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/textColorHint"
                app:boxBackgroundColor="@color/colorEditText"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/hintTextAndStrokeColor"
                app:hintTextColor="@color/hintTextAndStrokeColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_new_collocations_translation_tf">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:text="@string/Grammatical_category" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/add_new_add_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/ripple_effect_basic_btn"
                android:elevation="0dp"
                android:padding="10dp"
                android:text="@string/ADD"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/FormButton"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="@id/add_new_gram_cat_tf"
                app:layout_constraintStart_toStartOf="@id/add_new_gram_cat_tf"
                app:layout_constraintTop_toBottomOf="@id/add_new_gram_cat_tf"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/add_new_add_btn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

