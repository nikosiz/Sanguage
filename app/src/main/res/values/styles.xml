<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="LightButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="ET_Material" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>


</resources>