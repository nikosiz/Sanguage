<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="RippleStyleGrey">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#808080</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleGrey2">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#D6D6D6</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="LightButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="ET_Material" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>


</resources>